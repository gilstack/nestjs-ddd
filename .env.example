# Application Settings
APP_ENV=development
APP_PORT=3000
APP_PREFIX=api
APP_NAME=Storagie Backend
APP_VERSION=1.0.0

# CORS (Cross-Origin Resource Sharing)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Secrets (MUST change in production!)
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Cache System
CACHE_ENABLED=true

# Performance & Monitoring
PERFORMANCE_LOGGING=true
SLOW_QUERY_THRESHOLD=1000
ERROR_TRACKING_ENABLED=true
METRICS_ENABLED=true

# Development Features
SWAGGER_ENABLED=true
HEALTH_CHECKS_ENABLED=true

# Async Processing
ASYNC_TASKS_ENABLED=true

# Security Features
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true
HELMET_ENABLED=true

# For development (SQLite) - Default
DB_TYPE=sqlite
DB_DATABASE=./storage/database.sqlite

# For production (PostgreSQL) - Uncomment these and comment sqlite above
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=storagie_user
# DB_PASSWORD=storagie_password
# DB_DATABASE=storagie

# Database behavior settings
DB_SYNCHRONIZE=true
DB_LOGGING=true
DB_MIGRATIONS_RUN=false

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Global rate limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

# API specific rate limiting
API_THROTTLE_TTL=60000
API_THROTTLE_LIMIT=60

# Auth endpoints (stricter)
AUTH_THROTTLE_TTL=900000
AUTH_THROTTLE_LIMIT=5

# File upload endpoints
UPLOAD_THROTTLE_TTL=60000
UPLOAD_THROTTLE_LIMIT=10

# Heavy operations (reports, exports, etc)
HEAVY_THROTTLE_TTL=300000
HEAVY_THROTTLE_LIMIT=3
